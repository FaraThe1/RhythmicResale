<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <android.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:queryHint="Cerca..."
            android:iconifiedByDefault="false"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="15dp"
            android:theme="@style/SearchViewTheme"
            />


        <ImageButton
            android:id="@+id/filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/filter"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/option"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>











    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>








        </LinearLayout>
    </ScrollView>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_light_background"
        android:layout_margin="30dp"
        android:paddingBottom="6dp"
        android:layout_below="@+id/search_bar">




        <RelativeLayout
            android:id="@+id/ad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:background="@drawable/rounded_stroke"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/pd12"
                app:shapeAppearanceOverlay="@style/rounded_image"
                android:id="@+id/ad1_image"
                />

            <TextView
                android:id="@+id/ad1_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/ad_pd12"
                android:textColor="@color/darkdarkgrey"
                android:textSize="16sp"
                android:padding="4dp"
                android:layout_below="@+id/ad1_image"
                android:fontFamily="sans-serif-medium"
                />


            <ImageView
                android:id="@+id/eye1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eye_icon"
                android:layout_gravity="start"
                android:layout_below="@+id/ad1_name"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num17"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"
                android:layout_below="@+id/ad1_name"
                android:layout_toEndOf="@id/eye1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_pd12"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="6dp"
                android:layout_below="@+id/ad1_name"
                android:layout_alignEnd="@id/ad1_name"
                />




        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/ad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:background="@drawable/rounded_stroke"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/chitarrina"
                app:shapeAppearanceOverlay="@style/rounded_image"
                android:id="@+id/ad2_image"
                />

            <TextView
                android:id="@+id/ad2_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/ad_chitarrina"
                android:textColor="@color/darkdarkgrey"
                android:textSize="16sp"
                android:padding="4dp"
                android:layout_below="@+id/ad2_image"
                android:fontFamily="sans-serif-medium"
                />


            <ImageView
                android:id="@+id/eye2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eye_icon"
                android:layout_gravity="start"
                android:layout_below="@+id/ad2_name"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num42"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"
                android:layout_below="@+id/ad2_name"
                android:layout_toEndOf="@id/eye2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_chitarrina"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="6dp"
                android:layout_below="@+id/ad2_name"
                android:layout_alignEnd="@id/ad2_name"
                />




        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/ad3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ad1"
            android:padding="10dp"
            android:background="@drawable/rounded_stroke"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/pd12"
                app:shapeAppearanceOverlay="@style/rounded_image"
                android:id="@+id/ad3_image"
                />

            <TextView
                android:id="@+id/ad3_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/ad_pd12"
                android:textColor="@color/darkdarkgrey"
                android:textSize="16sp"
                android:padding="4dp"
                android:layout_below="@+id/ad3_image"
                android:fontFamily="sans-serif-medium"
                />


            <ImageView
                android:id="@+id/eye3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eye_icon"
                android:layout_gravity="start"
                android:layout_below="@+id/ad3_name"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num17"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"
                android:layout_below="@+id/ad3_name"
                android:layout_toEndOf="@id/eye3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_pd12"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="6dp"
                android:layout_below="@+id/ad3_name"
                android:layout_alignEnd="@id/ad3_name"
                />




        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>