<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/cream">







            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_light_background"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp">




                <RelativeLayout
                    android:id="@+id/ad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:background="@drawable/rounded_stroke"
                    >


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/basso1"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:id="@+id/ad1_image"
                        />

                    <TextView
                        android:id="@+id/ad1_name"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_basso"
                        android:textColor="@color/darkdarkgrey"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_below="@+id/ad1_image"
                        android:fontFamily="sans-serif-medium"
                        />


                    <ImageView
                        android:id="@+id/eye1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eye_icon"
                        android:layout_gravity="start"
                        android:layout_below="@+id/ad1_name"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num108"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        android:layout_below="@+id/ad1_name"
                        android:layout_toEndOf="@id/eye1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_basso"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp"
                        android:layout_below="@+id/ad1_name"
                        android:layout_alignEnd="@id/ad1_name"
                        />




                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/ad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:background="@drawable/rounded_stroke"
                    >


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/basso_alice"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:id="@+id/ad2_image"
                        />

                    <TextView
                        android:id="@+id/ad2_name"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_basso_alice"
                        android:textColor="@color/darkdarkgrey"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_below="@+id/ad2_image"
                        android:fontFamily="sans-serif-medium"
                        />


                    <ImageView
                        android:id="@+id/eye2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eye_icon"
                        android:layout_gravity="start"
                        android:layout_below="@+id/ad2_name"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num71"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        android:layout_below="@+id/ad2_name"
                        android:layout_toEndOf="@id/eye2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_basso_alice"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp"
                        android:layout_below="@+id/ad2_name"
                        android:layout_alignEnd="@id/ad2_name"
                        />


                </RelativeLayout>
            </RelativeLayout>
</RelativeLayout>