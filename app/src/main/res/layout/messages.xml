<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/cream">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="25dp">

            <!-- Messaggio 1-->
            <RelativeLayout
                android:id="@+id/message1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/rounded_corners"
                android:tag="1"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/user1"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circle_image"
                    />

                <TextView
                    android:id="@+id/nickname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/profile_image1"
                    android:layout_alignTop="@id/profile_image1" />

                <TextView
                    android:id="@+id/message_preview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_user1"
                    android:layout_toEndOf="@id/profile_image1"
                    android:layout_below="@id/nickname1" />

            </RelativeLayout>

            <!-- Messaggio 2-->
            <RelativeLayout
                android:id="@+id/message2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/rounded_corners"
                android:tag="2"
                android:layout_below="@+id/message1"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/user2"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circle_image"
                    />

                <TextView
                    android:id="@+id/nickname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/profile_image2"
                    android:layout_alignTop="@id/profile_image2" />

                <TextView
                    android:id="@+id/message_preview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_user2"
                    android:layout_toEndOf="@id/profile_image2"
                    android:layout_below="@id/nickname2" />

            </RelativeLayout>

            <!-- Messaggio 3-->
            <RelativeLayout
                android:id="@+id/message3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/rounded_corners"
                android:tag="3"
                android:layout_below="@+id/message2"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/user3"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circle_image"
                    />

                <TextView
                    android:id="@+id/nickname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/profile_image3"
                    android:layout_alignTop="@id/profile_image3" />

                <TextView
                    android:id="@+id/message_preview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_user3"
                    android:layout_toEndOf="@id/profile_image3"
                    android:layout_below="@id/nickname3" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
