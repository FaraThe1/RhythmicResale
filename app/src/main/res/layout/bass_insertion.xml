<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/cream">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/insertion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ad_basso"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                >




                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/bass1_image"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:src="@drawable/basso1"
                    app:shapeAppearanceOverlay="@style/rounded_image"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bass2_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/basso1"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:layout_marginEnd="70dp"
                        android:layout_alignEnd="@+id/bass3_image"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="3dp"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bass3_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/basso2"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:layout_marginEnd="70dp"
                        android:layout_alignEnd="@+id/bass4_image"
                        android:tint="@color/dark_transparent"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bass4_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/basso3"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:layout_marginStart="12dp"
                        android:layout_centerHorizontal="true"
                        android:tint="@color/dark_transparent"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bass5_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/basso4"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:layout_marginStart="70dp"
                        android:layout_alignStart="@+id/bass4_image"
                        android:tint="@color/dark_transparent"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bass56image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="26dp"
                        android:src="@drawable/basso6"
                        app:shapeAppearanceOverlay="@style/rounded_image"
                        android:layout_marginStart="70dp"
                        android:layout_alignStart="@+id/bass5_image"
                        android:tint="@color/dark_transparent"
                        />

                </RelativeLayout>

            </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="12dp"
               >


               <LinearLayout
                   android:id="@+id/user_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@drawable/less_rounded_corners"
                   android:clickable="true"
                   android:focusable="true"
                   android:layout_marginStart="12dp"
                   android:padding="8dp"

                   >

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/button_image"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/propic_alice"
                       android:layout_marginEnd="8dp"
                       android:scaleType="centerCrop"
                       app:shapeAppearanceOverlay="@style/circle_image"/>

                   <TextView
                       android:id="@+id/button_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/user_alice"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       android:textColor="@color/darkdarkgrey"
                       android:layout_gravity="center_vertical"
                       />

               </LinearLayout>
               
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   android:text="@string/price_basso"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/orange"
                   android:layout_marginStart="120dp"/>


               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/heart_icon_active"
                   android:layout_gravity="center_vertical"
                   android:layout_marginStart="24dp"/>
               
           </LinearLayout>


            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/darkdarkgrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bass_description"
                android:textSize="18sp"
                android:textColor="@color/darkdarkgrey"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/num108"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/darkdarkgrey"
                    />


                <ImageButton
                    android:id="@+id/send_message"
                    android:layout_width="68dp"
                    android:layout_height="53dp"
                    android:src="@drawable/message_icon_active"
                    android:layout_marginStart="120dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/less_rounded_corners"
                    />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/less_rounded_corners_orange"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    >


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="44dp"
                        android:text="@string/buy"
                        android:padding="4dp"
                        android:textColor="@color/light_grey"
                        android:textSize="18sp"
                        android:backgroundTint="@color/orange"
                        android:layout_margin="4dp"
                        android:layout_gravity="center_vertical"
                        />


                </RelativeLayout>




            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>